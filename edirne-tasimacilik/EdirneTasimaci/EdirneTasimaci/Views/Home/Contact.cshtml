<!-- Start Leave Message Contact -->
<section class="leave_message section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="section_title nice_title content-center">
                    <h4>Bize Ulaşın!</h4>
                </div>
                <div class="section_content">
                    <form action="" method="post">
                        <div class="col-md-6 col-sm-6">
                            <input type="text" placeholder=" İsim *" id="name" name="name"  style="max-width:100%;" />
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" placeholder=" E-Posta *" id="email" name="email" style="max-width:100%;" />
                        </div>
                        
                        <div class="col-md-12 col-sm-12">
                            <textarea name="message" id="message" placeholder="Mesajınız" style="max-width:100%;"></textarea>
                        </div>
                        <div class="col-md-12 content-center margin-top-25 col-sm-12">
                            <input name="submit" type="submit" value="Gönder" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="section_title nice_title content-center">
                    <h4>Sosyal Medya</h4>
                </div>
                <div class="social">
                    <button class="icon-btn facebook">
                       <a class="link" href="https://www.facebook.com/evdeneveedirne" target="_blank">
                          <i class="fa fa-facebook"></i>
                       </a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Leave Message Contact -->

